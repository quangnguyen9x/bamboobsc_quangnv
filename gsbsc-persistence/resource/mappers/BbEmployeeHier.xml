<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BbEmployeeHier">

	<resultMap type="com.netsteadfast.greenstep.po.hbm.BbEmployeeHier" id="baseResultMap">
		<id column="OID" property="oid"/>						
		<result column="EMP_OID" property="empOid"/>		
		<result column="SUP_OID" property="supOid"/>						
		<result column="CUSERID" property="cuserid"/>
		<result column="CDATE" property="cdate"/>
		<result column="UUSERID" property="uuserid"/>		
		<result column="UDATE" property="udate"/>		
	</resultMap>
	
	<select id="selectByParams" resultMap="baseResultMap" >
		select * from bb_employee_hier where 1=1
		<if test="oid != null">
			AND OID = #{oid}
		</if>		
		<if test="empOid != null">
			AND EMP_OID = #{empOid}
		</if>	
		<if test="supOid != null">
			AND SUP_OID = #{supOid}
		</if>								
	</select>
	
	<select id="selectByValue" resultMap="baseResultMap" >
		select * from bb_employee_hier where 1=1
		<if test="oid != null">
			AND OID = #{oid}
		</if>		
		<if test="empOid != null">
			AND EMP_OID = #{empOid}
		</if>	
		<if test="supOid != null">
			AND SUP_OID = #{supOid}
		</if>						
	</select>	
	
</mapper>