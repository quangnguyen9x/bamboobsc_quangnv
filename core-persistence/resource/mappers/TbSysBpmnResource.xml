<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="TbSysBpmnResource">

	<resultMap type="com.netsteadfast.greenstep.po.hbm.TbSysBpmnResource" id="baseResultMap">
		<id column="OID" property="oid"/>	
		<result column="ID" property="id"/>			
		<result column="DEPLOYMENT_ID" property="deploymentId"/>
		<result column="NAME" property="name"/>
		<result column="CONTENT" property="content"/>
		<result column="DESCRIPTION" property="description"/>				
		<result column="CUSERID" property="cuserid"/>
		<result column="CDATE" property="cdate"/>
		<result column="UUSERID" property="uuserid"/>		
		<result column="UDATE" property="udate"/>		
	</resultMap>
	
	<select id="selectByParams" resultMap="baseResultMap" >
		select * from tb_sys_bpmn_resource where 1=1
		<if test="oid != null">
			AND OID = #{oid}
		</if>		
		<if test="id != null">
			AND ID = #{id}
		</if>		
		<if test="name != null">
			AND NAME = #{name}
		</if>																						
	</select>
	
	<select id="selectByValue" resultMap="baseResultMap" >
		select * from tb_sys_bpmn_resource where 1=1
		<if test="oid != null">
			AND OID = #{oid}
		</if>		
		<if test="id != null">
			AND ID = #{id}
		</if>		
		<if test="name != null">
			AND NAME = #{name}
		</if>			
	</select>	
	
</mapper>